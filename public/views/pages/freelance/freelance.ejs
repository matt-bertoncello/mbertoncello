<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/header.ejs %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/freelance/ultimate.css" />
  <title><%= process.env.TITLE %> - freelance</title>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io.connect('/');

    function getNewUltimateBoard() {
      socket.emit('get-new-ultimate');
    }

    socket.on('ultimate-board', function(string) {
      document.getElementById('dynamic_ultimate').innerHTML = string;
    });

  </script>

</head>

<body onload="getNewUltimateBoard()">

  <% include ../../partials/pre-nav.ejs %>
    <li><a href='/freelance'>Freelance Projects</a></li>
  <% include ../../partials/post-nav.ejs %>

  <div class="jumbotron">
    <h1>Freelance Projects</h1>
  </div>

  <div class="content-container">
    <div class="card bordered shadowed" style='width:unset;'>
      <div class="card-header" id="dynamic_ultimate" onclick="getNewUltimateBoard()" alt="Click to look at more games">
        <img style='width:min(59.4vw, 360px)' src="/images/ultimate/redO.png">
      </div>
      <div class="card-body">
        <a type='button' class='card-link-inverted bordered' href="/freelance/ultimate">Ultimate Tic-Tac-Toe</a>
      </div>
    </div>

    <div class="card bordered shadowed">
      <img class="card-header" style="height:330px;" src='/images/hermes/hermes-black.png'>
      <div class="card-body">
        <a type='button' class='card-link-inverted bordered' href="/freelance/hermes">Hermes</a>
      </div>
    </div>

    <div class="card bordered shadowed">
      <img class="card-header" style="height:330px;" src='/images/notify.png'>
      <div class="card-body">
        <a type='button' class='card-link-inverted bordered' href="https://not1fy.herokuapp.com" target="_blank" rel="noreferrer">Notify</a>
      </div>
    </div>

    <div class="card bordered shadowed">
      <img class="card-header" style="height:330px;" src='/images/monitor_with_code.jpg'>
      <div class="card-body">
        <a type='button' class='card-link-inverted bordered' href="/freelance/website">This Website</a>
      </div>
    </div>
  <div>



</body>
</html>
