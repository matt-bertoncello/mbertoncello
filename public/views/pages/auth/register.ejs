<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/header.ejs %>
  <title><%= process.env.TITLE %> - register</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap-social.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.css" />

</head>

<body>

  <% include ../../partials/pre-nav.ejs %>
    <li><a href='/portfolio'>Portfolio</a></li>
  <% include ../../partials/post-nav.ejs %>

  <div class='page-height'>
    <div class='content'>

      <div class='column-container'>
        <div class='column'>

          <form class='form-signin' role='form' action='/auth/local/register' method='post'>
            <h2 class='form-signin-heading'>Please register</h2>
            <label class='sr-only' for='inputEmail'></label>
            <div>
              <input class='form-control' type='text' name='email' id='email' id='inputEmail' placeholder='email' autocomplete='email' required autofocus>
              <p class="error-text"><%= registerComment.email %></p>
            </div>
            <div>
              <input class='form-control' type='text' name='username' id='username' id='inputUsername' placeholder='username' autocomplete='username' required>
              <p class="error-text"><%= registerComment.username %></p>
            </div>
            <div>
              <input class='form-control' type='password' name='password1' id='password1' id='inputPassword1' placeholder='password' autocomplete='new-password' required>
              <p class="error-text"><%= registerComment.password1 %></p>
            </div>
            <div>
              <input class='form-control' type='password' name='password2' id='password2' id='inputPassword2' placeholder='password' autocomplete='new-password' required>
              <p class="error-text"><%= registerComment.password2 %></p>
            </div>
            <button class='card-link-inverted bordered' type='submit'>REGISTER</button>
            <button type="button" class="card-link-inverted bordered" onclick="window.location.href='/login'">LOGIN</button>
          </form>
        </div>

        <div class='column'>
          <div class='social-login'>
            <a class="btn btn-block btn-social btn-facebook" href='/auth/facebook'>
                <span class="fa fa-facebook"></span> Sign in with Facebook
            </a>
            <a class="btn btn-block btn-social btn-twitter" href='/auth/twitter'>
                <span class="fa fa-twitter"></span> Sign in with Twitter
            </a>
            <a class="btn btn-block btn-social btn-google" href='/auth/google'>
                <span class="fa fa-google"></span> Sign in with Google
            </a>
            <a class="btn btn-block btn-social btn-github" href='/auth/github'>
                <span class="fa fa-github"></span> Sign in with Github
            </a>
          </div>
        </div>
      </div>

</body>
</html>
