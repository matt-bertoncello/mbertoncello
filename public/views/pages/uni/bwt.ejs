<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/header.ejs %>
  <title><%= process.env.TITLE %> - bwt</title>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io.connect('/');

    function getCompression(string) {
      socket.emit('getCompression', string);
    }

    socket.on('returnCompression', function(data) {
      document.getElementById("output").innerHTML = data.string;
      document.getElementById("input-length").innerHTML = 'Input length: '+data.inputLength;
      document.getElementById("output-length").innerHTML = 'Output length: '+data.outputLength;
    });
    </script>

</head>

<body>

  <% include ../../partials/pre-nav.ejs %>
    <li><a href='/uni'>Uni Projects</a></li>
  <% include ../../partials/post-nav.ejs %>

  <div class="jumbotron">
    <h1>Burrows-Wheeler Transform</h1>
  </div>

  <div class="content-container">
    <div class='card-large bordered shadowed'>
      <h1>Input Text:</h1>
      <p id='input-length'>Input length: 0</p>
      <textarea id='input' class='text-input' style='min-width:75%;max-width:75%' oninput="getCompression(this.value)"></textarea>
    </div>

    <div class='card-large bordered shadowed'>
      <h1>Compressed Output:</h1>
      <p id='output-length'>Output length: 1</p>
      <textarea readonly id='output' class='text-input' style='min-width:75%;max-width:75%'>$</textarea>
    </div>
  </div>

</body>
</html>
