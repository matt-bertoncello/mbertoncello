<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/header.ejs %>
  <title><%= process.env.TITLE %> - login</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap-social.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.css" />

</head>

<body>

  <% include ../../partials/pre-nav.ejs %>
  <% include ../../partials/post-nav.ejs %>

  <div class='page-height'>
    <div class='content'>

      <div class='column-container'>
        <div class='column'>
          <form class='form-signin' role='form' action='/auth/local/login' method='post'>
            <h2 class='form-signin-heading'>Please sign in</h2>
            <label class='sr-only' for='inputEmail'></label>
            <input class='form-control' type='text' name='username' id='username' id='inputEmail' placeholder='username or email' autocomplete='email' required autofocus>
            <input class='form-control' type='password' name='password' id='password' id='inputPassword' placeholder='password' autocomplete='current-password' required>
            <button class='card-link-inverted bordered' type='submit'>LOGIN</button>
            <button type="button" class="card-link-inverted bordered" onclick="window.location.href='/register'">REGISTER</button>
          </form>

          <p class="error-text"><%= loginComment %></p>
        </div>

        <div class='column'>
          <div style="max-width:330px;margin: 0 auto;padding:15px;">
            <a class="btn btn-block btn-social btn-facebook" href='/auth/facebook'>
                <span class="fa fa-facebook"></span> Sign in with Facebook
            </a>
            <a class="btn btn-block btn-social btn-twitter" href='/auth/twitter'>
                <span class="fa fa-twitter"></span> Sign in with Twitter
            </a>
            <a class="btn btn-block btn-social btn-google" href='/auth/google'>
                <span class="fa fa-google"></span> Sign in with Google
            </a>
            <a class="btn btn-block btn-social btn-github" href='/auth/github'>
                <span class="fa fa-github"></span> Sign in with Github
            </a>
          </div>
        </div>
      </div>

</body>
</html>
